  <body>
   <!-- wpf loader Two -->
    <!-- <div id="wpf-loader-two">
      <div class="wpf-loader-two-inner">
        <span>Loading</span>
      </div>
    </div> -->
    <!-- / wpf loader Two -->
  <!-- SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>
  <!-- END SCROLL TOP BUTTON -->
  <!-- Start header section -->
    <%= render 'shared/header' %>
  <!-- End of header section -->
  <!-- Start of menu section -->
    <%= render 'shared/menu' %>
    <section id="cart-view">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="cart-view-area">
                <% if @bookmarks.present? %>
                <div class="cart-view-table">
                  <div class="row">
                    <div class="col-md-12">
                      <h3><strong>Your Bookmarks</strong></h3>
                    </div>
                  </div>
                  <div class="table-responsive">
                     <table class="table">
                       <thead>
                         <tr>
                           <th></th>
                           <th>Book</th>
                           <th>Price</th>
                           <th colspan="2">Action</th>
                         </tr>
                       </thead>
                       <tbody>
                         <% @bookmarks.each do |bookmark| %>
                          <% @book = bookmark.book %>
                          <tr>
                            <td>
                              <%= image_tag(@book.front_image, alt: "#{@book.name} image") %>
                            </td>
                            <td>
                              <%= link_to @book, class: 'aa-cart-title' do %>
                                <%= @book.name %> by <%= @book.author_name %>
                              <% end %>
                            </td>
                            <td>â‚¹ <%= @book.price %></td>
                            <td>
                              <%= link_to bookmark_path(bookmark), method: :delete, class: 'aa-browse-btn' do %>
                                Remove from Bookmark
                              <% end %>
                              <%= link_to 'Rent Now', book_carts_path(@book), method: :post, class: "aa-browse-btn" %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                   </div>
                 </div>
                 <% else %>
                   <h3 class="aa-empty-cart tealincolor"> You don't have any bookmarks <i class="fa fa-bookmark"></i> yet! </h3>
                   <h3 class="aa-empty-cart tealincolor"> Start browsing through <%= link_to 'All Books', books_url, class: 'aa-browse-btn' %> </h3>
                 <% end %>
               </div>
             </div>
           </div>
        </div>
    </section>
    <%= render 'shared/support' %>
    <%= render 'shared/subscribe' %>
    <%= render 'shared/footer' %>
