
<% if user_signed_in? %>
  <%= render 'shared/action' %>
  <%= link_to 'Your Orders', orders_path %>
  <%= link_to 'Your Cart', carts_path %>
  <%= link_to 'Your Avatar' %>
<% end %>

<p id="notice"><%= notice %></p>



<h1>Books</h1>

<table>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Author</th>
      <th>Publication</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.price %></td>
        <td><%= book.author_name %></td>
        <td><%= book.publication_name %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Rent Now', book_carts_path(book), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
