      <div class="wpf-loader-two-inner">
        <span>Loading</span>
      </div>
    </div> -->
    <!-- / wpf loader Two -->
  <!-- SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>
  <!-- END SCROLL TOP BUTTON -->
  <!-- Start header section -->
    <%= render 'shared/header' %>
  <!-- End of header section -->
  <!-- Start of menu section -->
    <%= render 'shared/menu' %>
    <!-- End of menu section -->
    <section id="aa-plan">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <div class="aa-plan-area">
                <div class="aa-plan-inner">
                  <ul class="nav nav-tabs aa-plans-tab">
                     <li class="active"><a href="#limited" data-toggle="tab">Limited</a></li>
                     <li><a href="#unlimited" data-toggle="tab">Unlimited</a></li>
                  </ul>
                  <div class="tab-content">
                    <div class="tab-pane fade in active" id="limited">
                      <% @plans.each do |plan| %>
                        <div class ="row">
                          <div class="col-md-4 col-md-offset-5 text-center">
                            <div class="plan-h3">
                              <%= plan.name.upcase %>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <% plan.sub_plans.limit(3).each do |subplan| %>
                              <div class="col-md-4 text-center">
                                  <div class="plan plan-danger plan-pricing">
                                      <div class="plan-heading">
                                          <i class="fa fa-book"></i>
                                          <h3><%= subplan.name.capitalize %></h3>
                                      </div>
                                      <div class="plan-body text-center">
                                          <p><strong>â‚¹<%= subplan.fee.to_i %></strong></p>
                                      </div>
                                      <ul class="list-group text-center">
                                          <li class="list-group-item">
                                            <i class="fa fa-money"></i>
                                            Security deposit is 50% of the M.R.P
                                          </li>
                                          <li class="list-group-item">
                                            <i class="fa fa-book"></i>Total books <%= subplan.max_book %>
                                          </li>
                                      </ul>
                                      <div class="plan-footer">
                                          <%= link_to 'BUY NOW!', select_plan_path(subplan), class:"btn btn-lg btn-block btn-danger", method: :post %>
                                          <!-- <a class="btn btn-lg btn-block btn-danger" href="#">BUY NOW!</a> -->
                                      </div>
                                  </div>
                                </div>
                              <% end %>
                            </div>
                        <% end %>
                      </div>
                      <div class="tab-pane fade" id="unlimited">
                        <h2 class="aa-empty-cart"> Coming Soon.. <i class="fa fa-books"></i></h3>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <%= render 'shared/support' %>
      <%= render 'shared/subscribe' %>
      <%= render 'shared/footer' %>
