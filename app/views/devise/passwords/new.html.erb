    <section id="aa-myaccount">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
           <div class="aa-myaccount-area">
             <div class="aa-myaccount-login">
               <h4>Reset your password</h4>
               <div class="aa-login-form">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= devise_error_messages! %>
                  <label for="">Email<span>*</span></label>
                  <%= f.text_field :email, autofocus: true, placeholder: "Email" %>
                  <%= f.submit "Send me reset password instructions", class:"aa-browse-btn forgotpwd" %>
                <% end %>
                <div class="signup">
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    Don't have an account ?
                    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
                  <% end -%>
                </div>
                <div class="aa-lost-password">
                  <%- if controller_name != 'sessions' %>
                    Already a memeber ?
                    <%= link_to "Log in", new_session_path(resource_name) %><br />
                  <% end -%>
                </div>
               </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%= render 'shared/support' %>
    <%= render 'shared/subscribe' %>
    <%= render 'shared/footer' %>
  </body>
</html>

     <h1 class="login-h1">Virtual Library</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="login-form-group">
          <span class="fa fa-user tealincolor"></span>
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "login-form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class:"aa-browse-btn forgotpwd" %>
        </div>
      <% end %>
      <div class="signup">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          Don't have an account ?
          <%= link_to "Sign up", new_registration_path(resource_name) %><br />
        <% end -%>
      </div>
      <div class="signin">
        <%- if controller_name != 'sessions' %>
          Already a memeber ?
          <%= link_to "Log in", new_session_path(resource_name) %><br />
        <% end -%>
      </div>
    </div>
    <%= render 'shared/support' %>
    <%= render 'shared/subscribe' %>
    <%= render 'shared/footer' %>
  </body>
