<!-- start header top  -->
<div class="aa-header-top">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="aa-header-top-area">
          <!-- start header top left -->
          <div class="aa-header-top-left">
            <div class="cellphone hidden-xs">
              <p><span class="fa fa-phone tealincolor"></span>+91 819007 1086</p>
            </div>
            <div class="cellphone hidden-xs">
              <p>
                <span class="fa fa-envelope tealincolor"></span>
                support@virtuallib.com
              </p>
            </div>
            <!-- / cellphone -->
          </div>
          <!-- / header top left -->
          <div class="aa-header-top-right">
            <ul class="aa-head-top-nav-right">
              <% if user_signed_in? %>
                <li class="hidden-xs">Hi <span> <%= current_user.email %> </span>
                <% @user_info = current_user.user_info %>
                <% if @user_info.present? %>
                  <li><%= link_to 'My Avatar', user_info_path(@user_info) %></li>
                <% else %>
                  <li><%= link_to 'My Avatar', new_user_info_path %></li>
                <% end %>
                <li class="hidden-xs"><% link_to 'My Wishlist', "#" %></li>
                <li class="hidden-xs"><%= link_to 'My Cart', carts_path %></li>
                <li class="hidden-xs"><%= link_to 'Checkout', orders_path %></li>
                <li class="hidden-xs">
                  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to new_user_session_path, class:"fa fa-sign-in" do %>
                      <span class="link_to_font">Log In</span>
                  <% end %>                
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- / header top  -->
