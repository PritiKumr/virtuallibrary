     <!-- Cart view section -->
     <section id="cart-view">
       <div class="container">
         <div class="row">
           <div class="col-md-12">
             <div class="cart-view-area">
               <div class="cart-view-table">
                 <div class="row">
                   <div class="col-md-12">
                     <h3><strong>Inv No. #<%= @order.inv_no %></strong></h3>
                   </div>
                 </div>
                 <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Book</th>
                          <th>Product</th>
                          <th>Price</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @cart_books.each do |cart_book| %>
                          <tr>
                            <td>
                              <%= image_tag(cart_book.book.front_image, alt: "#{cart_book.book.name} image") %>
                            </td>
                            <td>
                              <%= link_to cart_book.book, class: 'aa-cart-title' do %>
                                <%= cart_book.book.name %> by <%= cart_book.book.author_name %>
                              <% end %>
                            </td>
                            <td>₹ <%= cart_book.price %></td>
                            <!-- <td><input class="aa-cart-quantity" type="number" value="1"></td> -->
                            <!-- <td>$250</td> -->
                          </tr>
                        <% end %>
                        </tbody>
                    </table>
                 </div>
                 <!-- Cart Total view -->
                 <div class="cart-view-total">
                   <h4>Cart Totals</h4>
                   <table class="aa-totals-table">
                     <tbody>
                       <tr>
                         <th>Subtotal</th>
                         <td>₹ <%= @cart.value %></td>
                       </tr>
                       <tr>
                         <th>Total</th>
                         <td>₹ <%= @cart.value %></td>
                       </tr>
                       <tr>
                         <th>Delivery Date </th>
                         <td>Before <%= local_time(@order.created_at+7.day, "%B %e, %Y")  %></td>
                       </tr>
                     </tbody>
                   </table>
                 </div>
               </div>
             </div>
           </div>
         </div>
       </div>
     </section>

   <!-- / Cart view section -->
